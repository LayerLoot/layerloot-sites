---
import "../styles/global.css"; // Tailwind
import deals from "../data/deals.json";

// ---- Brand / Socials ----
const brand = { green: "#22C55E" };
const socials = [
  { label: "YouTube", href: "https://youtube.com/@LayerLootHQ" },
  { label: "Instagram", href: "https://instagram.com/LayerLootHQ" },
  { label: "X (Twitter)", href: "https://x.com/LayerLootHQ" },
  { label: "Reddit", href: "https://reddit.com/user/LayerLoot" },
];

// ---- Helpers ----
const now = new Date();

const safeDate = (iso?: string) => {
  if (!iso) return null;
  const d = new Date(iso);
  return isNaN(d.getTime()) ? null : d;
};

const isExpired = (d) => {
  const dt = safeDate(d.expiresAt);
  return !!(dt && dt.getTime() < now.getTime());
};

const fmtEnds = (d) => {
  const dt = safeDate(d.expiresAt);
  if (!dt) return "";
  const diffMs = dt.getTime() - now.getTime();
  if (diffMs <= 0) return "Expired";

  const diffMin = Math.floor(diffMs / 60000);
  const diffHr = Math.floor(diffMin / 60);
  const remMin = diffMin % 60;

  const sameDay = dt.toDateString() === now.toDateString();

  if (diffMin < 60) return `Ends in ${diffMin}m`;
  if (sameDay) return `Ends in ${diffHr}h ${remMin ? remMin + "m" : ""}`.trim();

  const opts: Intl.DateTimeFormatOptions = {
    weekday: "short",
    month: "short",
    day: "numeric",
    hour: "numeric",
    minute: "2-digit",
  };
  return `Ends ${dt.toLocaleString("en-US", opts)}`;
};

// ---- Live deals: pinned first, then earliest expiry ----
const liveDeals = (deals as any[])
  .filter((d) => !isExpired(d))
  .sort((a, b) => {
    const pa = a.pinned ? 1 : 0;
    const pb = b.pinned ? 1 : 0;
    if (pb - pa !== 0) return pb - pa;
    const ea = safeDate(a.expiresAt)?.getTime() ?? Number.POSITIVE_INFINITY;
    const eb = safeDate(b.expiresAt)?.getTime() ?? Number.POSITIVE_INFINITY;
    return ea - eb;
  });
